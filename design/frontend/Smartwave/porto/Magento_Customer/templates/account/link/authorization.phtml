$dataPostParam = '';
if ($block->isLoggedIn()) {
    $_helperObj = $this->helper('Webkul\Marketplace\Helper\Data')->getBakewayWelcomeMessage();
    $dataPostParam = sprintf(" data-post='%s'", $block->getPostParams());
